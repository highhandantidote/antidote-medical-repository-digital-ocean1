option_settings:
  aws:elasticbeanstalk:application:environment:
    # Flask Configuration
    FLASK_ENV: production
    FLASK_DEBUG: "False"
    
    # Session and Security
    SESSION_SECRET: "your-secure-session-secret-here"
    
    # Email Configuration (Optional - set via EB console)
    MAIL_USERNAME: ""
    MAIL_PASSWORD: ""
    MAIL_DEFAULT_SENDER: ""
    
    # Payment Gateway (Set via EB console for security)
    RAZORPAY_KEY_ID: ""
    RAZORPAY_KEY_SECRET: ""
    
    # AI Services (Set via EB console for security)
    OPENAI_API_KEY: ""
    GOOGLE_API_KEY: ""
    
    # SMS/Communication (Set via EB console for security)
    TWILIO_ACCOUNT_SID: ""
    TWILIO_AUTH_TOKEN: ""
    TWILIO_PHONE_NUMBER: ""
    
    # Performance Settings
    PYTHONUNBUFFERED: "1"
    PYTHONPATH: "/var/app/current"