{% extends 'base.html' %}

{% block title %}Community Dashboard - Antidote{% endblock %}

{% block content %}
<div class="container">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ url_for('web.index') }}">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Community Dashboard</li>
                </ol>
            </nav>
        </div>
    </div>

    {% if error %}
    <div class="alert alert-danger" role="alert">
        {{ error }}
    </div>
    {% endif %}

    <div class="row">
        <div class="col-md-3">
            <!-- Sidebar -->
            <div class="card bg-dark text-white mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Community Menu</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="#overview" class="list-group-item list-group-item-action bg-dark text-white border-light active" data-bs-toggle="list">Overview</a>
                    <a href="#threads" class="list-group-item list-group-item-action bg-dark text-white border-light" data-bs-toggle="list">Threads</a>
                    <a href="#moderation" class="list-group-item list-group-item-action bg-dark text-white border-light" data-bs-toggle="list">Moderation</a>
                    <a href="#analytics" class="list-group-item list-group-item-action bg-dark text-white border-light" data-bs-toggle="list">Analytics</a>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="tab-content">
                <!-- Overview -->
                <div class="tab-pane fade show active" id="overview">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-dark text-white mb-4">
                                <div class="card-body text-center">
                                    <h6 class="card-title text-muted">Threads</h6>
                                    <h2 class="mb-0">{{ thread_count }}</h2>
                                    <p class="text-muted">Total threads</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-dark text-white mb-4">
                                <div class="card-body text-center">
                                    <h6 class="card-title text-muted">Replies</h6>
                                    <h2 class="mb-0">{{ reply_count }}</h2>
                                    <p class="text-muted">Total replies</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-dark text-white mb-4">
                                <div class="card-body text-center">
                                    <h6 class="card-title text-muted">New Threads (30 days)</h6>
                                    <h2 class="mb-0">{{ recent_threads }}</h2>
                                    <p class="text-muted">Recent activity</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-dark text-white mb-4">
                                <div class="card-body text-center">
                                    <h6 class="card-title text-muted">New Replies (30 days)</h6>
                                    <h2 class="mb-0">{{ recent_replies }}</h2>
                                    <p class="text-muted">Recent interactions</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card bg-dark text-white mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Recent Threads</h5>
                            <a href="{{ url_for('web.community') }}" class="btn btn-sm btn-outline-info">View All Threads</a>
                        </div>
                        <div class="card-body">
                            {% if threads %}
                                <div class="table-responsive">
                                    <table class="table table-dark table-hover">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Author</th>
                                                <th>Category</th>
                                                <th>Created</th>
                                                <th>Replies</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for thread in threads %}
                                            <tr data-thread-id="{{ thread.id }}">
                                                <td>
                                                    <a href="{{ url_for('web.community_thread_detail', thread_id=thread.id) }}" class="text-info">
                                                        {{ thread.title|truncate(40) }}
                                                    </a>
                                                </td>
                                                <td>
                                                    {% if thread.is_anonymous %}
                                                        Anonymous
                                                    {% else %}
                                                        {{ thread.user.name if thread.user else 'Unknown User' }}
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if thread.category %}
                                                        {{ thread.category.name }}
                                                    {% else %}
                                                        General
                                                    {% endif %}
                                                </td>
                                                <td>{{ thread.created_at.strftime('%b %d, %Y') }}</td>
                                                <td>{{ thread.reply_count }}</td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="{{ url_for('web.community_thread_detail', thread_id=thread.id) }}" class="btn btn-outline-info">View</a>
                                                        <button class="btn btn-outline-warning">Edit</button>
                                                        <button class="btn btn-outline-danger">Delete</button>
                                                    </div>
                                                </td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <div class="text-center py-4">
                                    <i class="fas fa-comments fa-3x mb-3 text-muted"></i>
                                    <p class="text-muted">No threads available</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <!-- Threads Tab -->
                <div class="tab-pane fade" id="threads">
                    <div class="card bg-dark text-white mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">All Threads</h5>
                            <button class="btn btn-sm btn-outline-success create-thread">Create Thread</button>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col">
                                    <input type="text" class="form-control" placeholder="Search threads...">
                                </div>
                                <div class="col-auto">
                                    <button class="btn btn-outline-info">Search</button>
                                </div>
                            </div>
                            
                            {% if threads %}
                                <div class="table-responsive">
                                    <table class="table table-dark table-hover">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Author</th>
                                                <th>Category</th>
                                                <th>Created</th>
                                                <th>Views</th>
                                                <th>Replies</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for thread in threads %}
                                            <tr data-thread-id="{{ thread.id }}">
                                                <td>
                                                    <a href="{{ url_for('web.community_thread_detail', thread_id=thread.id) }}" class="text-info">
                                                        {{ thread.title|truncate(40) }}
                                                    </a>
                                                </td>
                                                <td>
                                                    {% if thread.is_anonymous %}
                                                        Anonymous
                                                    {% else %}
                                                        {{ thread.user.name if thread.user else 'Unknown User' }}
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if thread.category %}
                                                        {{ thread.category.name }}
                                                    {% else %}
                                                        General
                                                    {% endif %}
                                                </td>
                                                <td>{{ thread.created_at.strftime('%b %d, %Y') }}</td>
                                                <td>{{ thread.view_count }}</td>
                                                <td>{{ thread.reply_count }}</td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="{{ url_for('web.community_thread_detail', thread_id=thread.id) }}" class="btn btn-outline-info">View</a>
                                                        <button class="btn btn-outline-warning">Edit</button>
                                                        <button class="btn btn-outline-danger">Delete</button>
                                                    </div>
                                                </td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <div class="text-center py-4">
                                    <i class="fas fa-comments fa-3x mb-3 text-muted"></i>
                                    <p class="text-muted">No threads available</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <!-- Moderation Tab -->
                <div class="tab-pane fade" id="moderation">
                    <div class="card bg-dark text-white mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Moderation Queue</h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Reported content and pending moderation actions will appear here.
                            </div>
                            
                            <div class="text-center py-4">
                                <i class="fas fa-shield-alt fa-3x mb-3 text-muted"></i>
                                <p class="text-muted">No pending moderation items</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Analytics Tab -->
                <div class="tab-pane fade" id="analytics">
                    <div class="card bg-dark text-white mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Community Analytics</h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Analytics show community engagement metrics over time.
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <h6>Thread Creation Trend</h6>
                                    <div class="bg-secondary rounded p-3 text-center" style="height: 200px;">
                                        <p class="text-muted mt-5">Chart placeholder</p>
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-4">
                                    <h6>Reply Activity Trend</h6>
                                    <div class="bg-secondary rounded p-3 text-center" style="height: 200px;">
                                        <p class="text-muted mt-5">Chart placeholder</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-12">
                                    <h6>Popular Categories</h6>
                                    <div class="table-responsive">
                                        <table class="table table-dark table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Category</th>
                                                    <th>Threads</th>
                                                    <th>Replies</th>
                                                    <th>Last Activity</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>Sample Category 1</td>
                                                    <td>42</td>
                                                    <td>128</td>
                                                    <td>2 hours ago</td>
                                                </tr>
                                                <tr>
                                                    <td>Sample Category 2</td>
                                                    <td>36</td>
                                                    <td>95</td>
                                                    <td>4 hours ago</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Enable Bootstrap tabs
        const triggerTabList = [].slice.call(document.querySelectorAll('.list-group-item[data-bs-toggle="list"]'));
        triggerTabList.forEach(function(triggerEl) {
            const tabTrigger = new bootstrap.Tab(triggerEl);
            
            triggerEl.addEventListener('click', function(event) {
                event.preventDefault();
                tabTrigger.show();
            });
        });
    });
</script>
{% endblock %}